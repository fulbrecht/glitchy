{
    "manifest_version": 3,
    "name": "Glitchy",
    "description": "Injects personal glitches into web content",
    "version": "1.0",
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["scripts/content.js"],
          "css": ["css/style.css"]
        }
    ],
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html"
    }
  }
  